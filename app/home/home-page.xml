<Page
    loaded="onLoaded" 
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <Label text="COVID19 - World Wide Report"></Label>
		<ActionItem tap="onRefresh" text="Refresh This Page" android.position="popup" />
    </ActionBar>

    <GridLayout rows="*,auto,auto">
	    <StackLayout row="0">
	    	<Label text="GLOBAL CASE (All country)" class="b-title" />
	    	<GridLayout rows="auto,10, auto" columns="10,*,10,*,10">
	    		<StackLayout row="0" col="1" class="b-confirm">
	    			<Label text="{{ confirmed }}" />
	    			<Label text="POSITIVE" />
	    		</StackLayout>

				<StackLayout row="0" col="3" class="b-active">
	    			<Label text="{{ active }}" />
	    			<Label text="ACTIVE" />
	    		</StackLayout>

	    		<StackLayout row="2" col="1" class="b-deaths">
	    			<Label text="{{ deaths }}" />
	    			<Label text="DEATHS" />
	    		</StackLayout>

	    		<StackLayout row="2" col="3" class="b-recovered">
	    			<Label text="{{ recovered }}" />
	    			<Label text="RECOVERED" />
	    		</StackLayout>
	    	</GridLayout>
	    	<Label text="{{ 'Last update ' + lastupdate }}" class="b-lastupdate" />

	    	<Label text="LOCAL CASE (Indonesia)" class="b-title" />
	    	<GridLayout rows="auto,10, auto" columns="10,*,10,*,10">
	    		<StackLayout row="0" col="1" class="b-confirm">
	    			<Label text="{{ confirmed_id }}" />
	    			<Label text="POSITIVE" />
	    		</StackLayout>

				<StackLayout row="0" col="3" class="b-active">
	    			<Label text="{{ active_id }}" />
	    			<Label text="ACTIVE" />
	    		</StackLayout>

	    		<StackLayout row="2" col="1" class="b-deaths">
	    			<Label text="{{ deaths_id }}" />
	    			<Label text="DEATHS" />
	    		</StackLayout>

	    		<StackLayout row="2" col="3" class="b-recovered">
	    			<Label text="{{ recovered_id }}" />
	    			<Label text="RECOVERED" />
	    		</StackLayout>
	    	</GridLayout>
	    	<!-- <Label text="Source data from kawalcorona.com" class="b-datasource" /> -->
	    	<Label text="{{ 'Last update ' + lastupdate_id }}" class="b-lastupdate" />
	    </StackLayout>
    </GridLayout>
</Page>
